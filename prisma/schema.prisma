generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Felhasználó
model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  username       String?   @unique
  
  role           String    @default("USER")
  virtualBalance Float     @default(0)
  points         Int       @default(0)
  referralCode   String?   @unique
  referredBy     String?
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// 2. Hírek (JAVÍTOTT VERZIÓ - Hogy passzoljon a kódhoz!)
model NewsPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  imageUrl    String?  // Ez hiányzott az előbb!
  isImportant Boolean  @default(false) // Ez is hiányzott!
  published   Boolean  @default(true)  // Ez is!
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
